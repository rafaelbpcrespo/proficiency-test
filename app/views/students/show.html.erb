<div class="col-md-12">
  <h2>Detalhes do Estudante</h2>
  <br />

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade in text-center" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <%= notice %>
    </div>
  <% end %>

  <p class="col-md-12">
    <strong><%= t('.name') %>:</strong>
    <%= @student.name %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.register_number') %>:</strong>
    <%= @student.register_number %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.status') %>:</strong>
    <%= @student.status %>
  </p>

  <% if @student.classrooms.empty? %>
    <p class="col-md-12">
      O estudante não está matriculado em nenhum curso até o momento.
    </p>

  <% else %>

    <div class="table">
      <table class="table table-bordered table-hover table-condensed table-striped">
        <thead>
          <tr>
            <th>Curso</th>
            <th>Data da Matrícula</th>
          </tr>
        </thead>

        <tbody>
          <% @student.classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.course.name %></td>
            <td><%= classroom.entry_at.strftime("%d/%m/%Y %H:%M") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>


  <div class="col-md-2">
    <%= link_to 'Editar', edit_student_path(@student), class: 'btn btn-info btn-block' %>
  </div>

  <div class="col-md-2">
    <%= link_to 'Voltar', students_path, class: 'btn btn-default btn-block' %>
  </div>
</div>