<div class="col-md-offset-2 col-md-12">
  <h2>Detalhes do Curso</h2>
  <br />

  <p id="notice"><%= notice %></p>

  <p class="col-md-12">
    <strong><%= t('.name') %>:</strong>
    <%= @course.name %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.description') %>:</strong>
    <%= @course.description %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.status') %>:</strong>
    <%= @course.status %>
  </p>

  <div class="col-md-2">
    <%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-info btn-block' %>
  </div>

  <div class="col-md-2">
    <%= link_to 'Voltar', courses_path, class: 'btn btn-default btn-block' %>
  </div>

</div>