<div class="col-md-12">
  <h2>Detalhes do Curso</h2>
  <br />

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade in text-center" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <%= notice %>
    </div>
  <% end %>

  <p class="col-md-12">
    <strong><%= t('.name') %>:</strong>
    <%= @course.name %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.description') %>:</strong>
    <%= @course.description %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.status') %>:</strong>
    <%= @course.status %>
  </p>

  <% if @course.classrooms.empty? %>
    <p class="col-md-12">
      O curso não possui estudantes matriculados até o momento.
    </p>

  <% else %>

    <div class="table">
      <table class="table table-bordered table-hover table-condensed table-striped">
        <thead>
          <tr>
            <th>Estudante</th>
            <th>Data da Matrícula</th>
          </tr>
        </thead>

        <tbody>
          <% @course.classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.student.name %></td>
            <td><%= classroom.entry_at.strftime("%d/%m/%Y %H:%M") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="col-md-2">
    <%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-info btn-block' %>
  </div>

  <div class="col-md-2">
    <%= link_to 'Voltar', courses_path, class: 'btn btn-default btn-block' %>
  </div>

</div>