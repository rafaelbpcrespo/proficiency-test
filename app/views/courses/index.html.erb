<div class="page-header">
  <h2>Cursos</h2>
  <div class="text-right">
    <%= link_to new_course_path, class: 'btn btn-primary' do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Status</th>
        <th> Opções </th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.status %></td>
        <td>
          <%= link_to course, class: 'btn btn-sm btn-info', title: 'Detalhes do Curso' do %>
            <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to edit_course_path(course), class: 'btn btn-sm btn-primary', title: 'Editar Informações' do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to course, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-sm', title: 'Remover Curso' do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>